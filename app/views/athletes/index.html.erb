<div class="row">
  <%= link_to 'Add an athlete', new_athlete_path, {:class => 'btn'} %>
</div>
<div class="row">
  <div class="col-xs-6">
    <h3>Women:</h3>
    <ul class="list-unstyled">
      <% @women.each do |athlete| %>
        <li><%= link_to athlete.full_name, athlete %></li>
      <% end %>
    </ul>
  </div>
  <div class="col-xs-6">
    <h3>Men:</h3>
    <ul class="list-unstyled">
      <% @men.each do |athlete| %>
        <li><%= link_to athlete.full_name, athlete %></li>
      <% end %>
    </ul>
  </div>
</div>