<h1>New Athlete</h1>
<div class="col-xs-6">
  <%= simple_form_for @athlete do |f| %>
    <%= f.input :first_name, :label => false, :wrapper_html => {:class => "form-group"}, :input_html => {:class => "form-control", :placeholder => "First name"} %>
    <%= f.input :last_name, :label => false, :wrapper_html => {:class => "form-group"}, :input_html => {:class => "form-control", :placeholder => "Last name"} %>
    <%= f.input :status, :collection => f.object.class::STATUS_LIST, :include_blank => false, :label => false, :wrapper_html => {:class => "form-group"}, :input_html => {:class => "form-control"} %>
    <%= f.input :gender, :collection => f.object.class::GENDER_LIST, :prompt => 'select a gender...', :label => false, :wrapper_html => {:class => "form-group"}, :input_html => {:class => "form-control"} %>
    <%= f.button :submit, :class => 'btn btn-info' %>
    <%= link_to 'Cancel', athletes_path, :class => 'btn btn-danger' %>
  <% end %>
</div>